###############################################################
#   bochsrc : bochs configure file for MyDetailedOS           #
###############################################################
# Be Careful when using this bochsrc file
# 1. startos 的文件位置,如果startos位置改变，我们需要将对应a.img 的位置进行更新。
# 2. bochs编译源文件的位置,通过修改shell变量BXSHARE来设定bochs安装位置。

# how much memory the emulated machine will have
megs: 32

# filename of ROM images
romimage: file=$BXSHARE/BIOS-bochs-latest
vgaromimage: file=$BXSHARE/VGABIOS-elpin-2.40

# adventage： if I recompile a higher version , I only need to revise BXSHARE in the /etc/profile

# what disk images will be used 
floppya: 1_44="/home/mudongliang/system/startos/a.img", status=inserted

# hard disk
#ata0: enabled=1, ioaddr1=0x1f0, ioaddr2=0x3f0, irq=14
#ata0-master: type=disk, path="hd10meg.img", cylinders=306, heads=4, spt=17
#ata0-master: type=disk, path="/home/mudongliang/system/startos/80m.img", mode=flat, cylinders=162, heads=16, spt=63
# choose the boot disk.
#boot: floppy
boot: a

# default config interface is textconfig.
#config_interface: textconfig
#config_interface: wx

#display_library: x
# other choices: win32 sdl wx carbon amigaos beos macintosh nogui rfb term svga 

# where do we send log messages?
log: /home/mudongliang/system/startos/bochsout

# disable the mouse, since DLX is text only
mouse: enabled=0

# enable key mapping, using US layout as default.

keyboard_mapping: enabled=1, map=$BXSHARE/keymaps/x11-pc-us.map
#keyboard_mapping: enabled=1, map=$BXSHARE/keymaps/x11-pc-fr.map
#keyboard_mapping: enabled=1, map=$BXSHARE/keymaps/x11-pc-de.map
#keyboard_mapping: enabled=1, map=$BXSHARE/keymaps/x11-pc-es.map

